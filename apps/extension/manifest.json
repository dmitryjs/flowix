{
  "manifest_version": 3,
  "name": "Flowix Recorder",
  "version": "0.1.0",
  "description": "Minimal Flowix capture extension",
  "permissions": ["storage", "tabs", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Flowix",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "snapshot": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Capture state snapshot"
    },
    "toggle-recording": {
      "description": "Start/stop recording"
    },
    "export-session": {
      "description": "Export current session as JSON"
    }
  }
}
